<div class="row">
  <div class="col-lg-12">
    <h1>Detalles del Tipo</h1>
      <%= link_to "Regresar al listado de Tipos", types_path, class: 'btn btn-primary'%>
      <%= link_to "Editar Tipo", edit_type_path(@type), class: 'btn btn-primary'%>
      <%= link_to "Destruir Tipo", @type, method: :delete, class: 'btn btn-danger' %>

      <div class="card">
        <table class="table">
          <tr>
            <td><b>Nombre del Tipo:</b></td>
            <td><%= @type.nombre %></td>
          </tr>
          <tr>
            <td><b>Descripción:</b></td>
            <td><%= @type.descripcion %></td>
          </tr>
          <tr>
            <td><b>Fecha de Creación:</b></td>
            <td><%= @type.created_at %></td>
          </tr>
        </table>
      </div>

  </div>
</div>
