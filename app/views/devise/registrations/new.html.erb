<style>
*{
  margin: 0;
  padding: 0;
  font-family: Arial, Helvetica, sans-serif;
}

  body {
  height: 100vh;
  width: 100%;
  align-items: center;
  background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url("https://images.unsplash.com/photo-1590487988256-9ed24133863e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MjR8fGd5bXxlbnwwfHwwfHw%3D&w=1000&q=80");
  background-size: cover;
  background-position: center;
}



.container-page{
  height: 80vh;
  width: 100%;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 14rem;
  transition: 0.5s;
  background-color: rgba(255, 255, 255, 0.01);
  border: 1px solid white;
  backdrop-filter: blur(8px);
  min-width: 300px;
  min-height: 350px
}

.login-container{
  width: 100%;
  height: fit-content;
  flex: 2;
  
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color white;
}

.input-line-container{
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  width: 100%;
  margin: 1rem 0;
}

.name-input{
  font-size: 12px;
}

.input-line{
  width: 100%;
  height: 30px;
  background-color: transparent;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: 2px solid #cbcbcb;
  outline: none;
  margin_bottom: 1rem;
  color: white;
}

.login-container{
  width: 100%;
  height: fit-content;
  display: flex;
  flex-wrap: wrap;
  padding-right: revert;
  justify-content: center;
  flex-direction: column;
  color: white;
}

.button-register{
  width: 100%;
  height: 45px;
  border-radius: 45px;
  background: rgba(255,255,255,0.14);
  color: white;
  font-size: 15px;
  font-weight: 600;
  text-transform: uppercase;
  border: none;
  margin-bottom: 1rem;
  cursor: pointer;
  transition: 0.5;
}

.button-second{
  width: calc(50% – 20px);
  height: 30px;
  border-radius: 55px;
  background: rgba(255,255,255,0.15);
  color: white;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  border: 1px solid black;
  margin-bottom: 1rem;
  cursor: pointer;
  transition: 0.5s;
  opacity: 0.6;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-second:hover{
  opacity: 1;
}

/* Centra el input personalizado con el texto */
.custom-radio-checkbox {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    font-family: arial;
}

select {
    border: 1px solid black;
    background-color: rgba(255,255,255,0.10);
    padding: 5px;
    display: inline-flex;
    border-radius: 8px;
    width: 100%;
    align-items: center;
    cursor: pointer;
}
</style>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo:false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <section class="background-radial-gradient overflow-hidden">

    <body class="container-form">
      <div class="text-center " style="z-index: 10">
          <h1 class="my-5 display-10 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
            InExtremis <br />
            <span style="color: hsl(218, 81%, 75%)">La senda de los grandes</span>
          </h1>
      </div>

      <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 d-flex align-items-center mb-5">

          <div class="login-container">
            <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
            <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

            <div class="container-page">
              <div class="input-line-container">
                <div class="card-body px-4 py-5 px-md-10">
                  <form>
                    <!-- 2 column grid layout with text inputs for the first and last names -->
                    <div class="row">
                      <div class="col-md-4 mb-6">
                        <div class="form-outline">
                          <%= f.text_field :nombre, class: 'input-line'%>
                          <label class="form-label" for="form3Example1">Nombre</label>
                        </div>
                      </div>
                      <div class="col-md-4 mb-6">
                        <div class="form-outline">
                          <%= f.text_field :apellido, class: 'input-line'%>
                          <label class="form-label" for="form3Example2">Apellido</label>
                        </div>
                      </div>
                      <div class="col-md-4 mb-6">
                        <div class="form-outline">
                          <div class="select">
                              <select id="employee_tipo_documento" name="employee[tipo_documento]">
                                <option value=""></option>
                                <option value="C.C">C.C</option>
                                <option value="C.E">C.E</option>
                                <option value="T.I">T.I</option>
                              </select>
                            <label class="form-label" for="form3Example2">Tipo de Documento</label>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-4 mb-6">
                        <div class="form-outline">
                          <%= f.text_field :num_documento, class: 'input-line'%>
                          <label class="form-label" for="form3Example2">Número de Documento</label>
                        </div>
                      </div>
                      <div class="col-md-4 mb-6">
                        <div class="form-outline">
                          <%= f.date_field :fecha_nacimiento, class: 'input-line'%>
                          <label class="form-label" for="form3Example4">Fecha de Nacimiento</label><br />
                        </div>
                      </div>
                      <div class="col-md-4 mb-6">
                        <div class="form-outline">
                          <%= f.date_field :fecha_ingreso, class: 'input-line'%>
                          <label class="form-label" for="form3Example4">Fecha de Ingreso</label><br />
                        </div>
                      </div>
                    </div>
<!--
                    <div class="col-md-4 mb-6">
                      <div class= "form-outline">
                        <%= f.fields_for :childs, @childs do |c| %>
                          <%= c.text_field :name %>
                        <% end %>
                        <label class="form-label" for="form3Example4">Nombre del Gimnasio</label><br />
                      </div>
                    </div>
                    -->
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-line' %>
                      <%= f.label :email, class: 'form-label', for: 'form3Example4' %><br />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <% if @minimum_password_length %>
                        <%= f.password_field :password, autocomplete: "new-password", class: 'input-line' %>
                        <%= f.label :password, class: 'form-label', for: 'form3Example4' %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                    </div>

                    <div class="form-outline mb-4">
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'input-line' %>
                      <%= f.label :password_confirmation, class: 'form-label', for: 'form3Example4' %><br />
                    </div>

                    <!-- Submit button -->
                    <div class="actions">
                      <%=link_to "Registrar", gyms_path,class: 'button-register'%>
                    </div>
                    <%= render "devise/shared/links" %>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div>
      </div>
    </body>

  </section>
  <!-- Section: Design Block -->
<% end %>


